{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "commonjs",
    "moduleResolution": "Node",
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "pretty": true,
    "removeComments": true,
    "strict": true,
    "target": "ES2015",
    "outDir": "dist/lib",
    "declaration": true
  },
  "include": [
    "src/lib/**/*"
  ],
  "exclude": [
    "node_modules/"
  ]
}
